$mol_nav_demo $mol_example
	title \Number input control with various configuration
	plugins /
		<= Nav $mol_nav
			keys_x <= tab_list
			current_x?val <=> tab_current?val
			keys_y <= row_list
			current_y?val <=> row_current?val
	sub /
		<= Demo_items $mol_card
			content /
				<= Tab_list $mol_switch
					keys => tab_list
					value?val <=> tab_current?val \
					options *
						first \First
						second \Second
						third \Third
				<= Row_list $mol_switch
					keys => row_list
					value?val <=> row_current?val \
					options *
						first \First
						second \Second
						third \Third
			status \Select option and use keys to switch
	tags /
		\$mol_card
		\$mol_switch
		\navigation
		\keyboard
	aspects /
		\Widget/Plugin

